<?xml version="1.0" encoding="utf-8"?>
<!-- This drawable creates a linear gradient for the full menu background. -->
<!-- The gradient starts with the menu's dark color and fades to the main background color. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:angle="0"
        android:startColor="#2E2E2E"
        android:endColor="#1C1C1E"
        android:type="linear" />
</shape>